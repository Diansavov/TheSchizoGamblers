@using Microsoft.AspNetCore.Identity
@inject UserManager<GamblersModel> _userManager

@{
    ViewData["Title"] = "Home Page";
}

@section Styles {
    <link rel="stylesheet" href="~/css/indexPage.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/cards.css" asp-append-version="true" />

}
<!--Carousel-->
<div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">

        <button type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide-to="0" class="active"
            aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide-to="1"
            aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide-to="2" using
            TheSchizoGamblers.Data; aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/slots.jpg" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5>Wanna play the slots?</h5>
                <form>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <button class="btn btn-success" asp-area="" asp-controller="Games" asp-action="Slots"
                            type="submit">Play Now!</button>
                    }
                    else
                    {
                        <button class="btn btn-success" asp-area="" asp-controller="Gamblers" asp-action="LogIn"
                            type="submit">Log in</button>
                    }
                </form>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/roulette.jpg" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5>Second slide label</h5>
                <p>Some representative placeholder content for the first slide.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/cards.jpg" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5>Third slide label</h5>
                <p>Some representative placeholder content for the first slide.</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying"
        data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying"
        data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<div class="games-text">
    <p>Check out all our games!</p>
</div>
<!--Cards-->
<div class="cards-container">
    <div id="cards" class="justify-content-center">
        @for (int i = 0; i < 8; i++)
        {
            <a class="card" asp-controller="Games" asp-action="Slots">
                <div class="card-content">
                    <div class="card-image">
                        <img src="~/images/cardImages/Slot.jpg">
                    </div>
                    <div class="card-text">
                        <h3>Wanna play the slots</h3>
                        <form>
                            <button class="btn btn-success" asp-area="" asp-controller="Games" asp-action="Slots"
                                type="submit">Play Now!</button>
                        </form>
                    </div>
                </div>
            </a>
        }
    </div>
</div>

<script src="~/js/cardsGlow.js"></script>