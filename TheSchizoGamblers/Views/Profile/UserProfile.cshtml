@{
    ViewData["Title"] = "User Profile";
}

@section Styles {
    <link rel="stylesheet" href="~/css/profile/profile.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/profile/profileContent.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/profile/redirectCards.css" asp-append-version="true" />
}


    <div id="profiles">
        <!--Side Panel-->
        <div class="profile-side-panel">
            <ul class="nav d-flex flex-column profile-content">
                <li class="mb-1 w-100">
                    <button class="btn btn-toggle" data-bs-toggle="collapse" data-bs-target="#list-collapse1"
                        aria-expanded="true">Overview</button>
                    <div id="list-collapse1" class="collapse show">
                        <ul class="btn-toggle-nav">
                            <li class="sub-menu"><a class="btn sub-menu-btn js-Pjax" asp-controller="Profile"
                                    asp-action="UserProfile">Beginning</a></li>
                            <li class="sub-menu"><a class="btn sub-menu-btn js-Pjax" asp-controller="Profile"
                                    asp-action="About">About</a></li>
                        </ul>
                    </div>
                </li>
                <li class="mb-1 w-100">
                    <button class="btn btn-toggle collapsed" data-bs-toggle="collapse"
                        data-bs-target="#list-collapse2">Profile Settings</button>
                    <div id="list-collapse2" class="collapse hide">
                        <ul class="btn-toggle-nav">
                            <li class="sub-menu"><a class="btn sub-menu-btn js-Pjax" asp-controller="Profile"
                                    asp-action="PublicProfile">Public Profile</a></li>
                            <li class="sub-menu"><a class="btn sub-menu-btn js-Pjax" asp-controller="Profile"
                                    asp-action="Account">Account</a></li>
                            <li class="sub-menu"><a class="btn sub-menu-btn-special sub-menu-btn"
                                    asp-controller="Gamblers" asp-action="LogOut">Log out</a></li>
                        </ul>
                    </div>
                </li>
                <li class="mb-1 w-100">
                    <button class="btn btn-toggle collapsed" data-bs-toggle="collapse"
                        data-bs-target="#list-collapse3">Transactions</button>
                    <div id="list-collapse3" class="collapse hide">
                        <ul class="btn-toggle-nav">
                            <li class="sub-menu"><a class="btn sub-menu-btn js-Pjax" asp-controller="Profile"
                                    asp-action="Deposit">Deposit</a></li>
                            <li class="sub-menu"><a class="btn sub-menu-btn js-Pjax" asp-controller="Profile"
                                    asp-action="Withdraw">Withdraw</a></li>
                            <li class="sub-menu"><a class="btn sub-menu-btn js-Pjax" asp-controller="Profile"
                                    asp-action="CardManagment">Card managment</a></li>

                        </ul>
                    </div>
                </li>
                <li class="mb-1 w-100">
                    <button class="btn btn-toggle collapsed" data-bs-toggle="collapse"
                        data-bs-target="#list-collapse4">History</button>
                    <div id="list-collapse4" class="collapse hide">
                        <ul class="btn-toggle-nav">
                            <li class="sub-menu"><a class="btn sub-menu-btn js-Pjax" asp-controller="Profile"
                                    asp-action="Transactions">Transactions</a></li>
                            <li class="sub-menu"><a class="btn sub-menu-btn js-Pjax" asp-controller="Profile"
                                    asp-action="Bets">Bets</a></li>
                        </ul>
                    </div>
                </li>
                <li class="mb-1 w-100">
                    <button class="btn  btn-toggle collapsed" data-bs-toggle="collapse"
                        data-bs-target="#list-collapse5">Support</button>
                    <div id="list-collapse5" class="collapse hide">
                        <ul class="btn-toggle-nav">
                            <li class="sub-menu"><a class="btn sub-menu-btn js-Pjax" asp-controller="Profile"
                                    asp-action="Contact">Contact support</a></li>
                            <li class="sub-menu"><a class="btn sub-menu-btn js-Pjax" asp-controller="Profile"
                                    asp-action="ResetPassword">Reset password</a></li>
                            <li class="sub-menu"><a class="btn sub-menu-btn js-Pjax" asp-controller="Profile"
                                    asp-action="ChangeEmail">Change email</a></li>
                        </ul>
                    </div>
                </li>
            </ul>
        </div>
        <!--Main Content-->
        <section class="profile the-content">
            <div class="profile-border">
                <div class="profile-text">
                    <h1>Hello, <span class="bold-text">@User.Identity.Name</span></h1>
                    <p>Welcome to TheSchizoGamblers, the fake online casino trying to provide fun
                        and gambling to some gambling addicted people such as you,
                        <span class="bold-text">@User.Identity.Name</span>.
                    </p>
                    <div class="cards-container">
                        <div id="cards">
                            <a class="card" asp-controller="Home" asp-action="Index">
                                <div class="card-content">
                                    <div class="card-image">
                                        <img src="~/images/slots.jpg">
                                    </div>
                                    <div class="card-text">
                                        <h3>Go to Home page</h3>
                                    </div>
                                </div>
                            </a>
                            <a class="card js-Pjax" asp-controller="Profile" asp-action="Transactions">
                                <div class="card-content">
                                    <div class="card-image">
                                    </div>
                                    <div class="card-text">
                                        <h3>Go to Transactions</h3>
                                    </div>
                                </div>
                            </a>
                            <a class="card js-Pjax" asp-controller="Profile" asp-action="PublicProfile">
                                <div class="card-content">
                                    <div class="card-image">
                                    </div>
                                    <div class="card-text">
                                        <h3>Go to Profile settings</h3>
                                    </div>
                                </div>
                            </a>
                            <a class="card js-Pjax" asp-controller="Profile" asp-action="Transactions">
                                <div class="card-content">
                                    <div class="card-image">
                                    </div>
                                    <div class="card-text">
                                        <h3>Go to History</h3>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <script src="~/js/cardsGlow.js"></script>
        </section>
    </div>
    <script src="~/js/profile/profileArrowRotate.js"></script>
    <script src="~/lib/node_modules/pjax/pjax.js"></script>
    <script src="~/js/profile/profilePjax.js"></script>
